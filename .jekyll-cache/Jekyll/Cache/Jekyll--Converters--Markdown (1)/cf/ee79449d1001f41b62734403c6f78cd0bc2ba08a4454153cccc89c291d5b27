                hps_0_ddr_mem_dqs_n                      : inout std_logic_vector(3 downto 0)  := (others =&gt; 'X');
                hps_0_ddr_mem_odt                        : out   std_logic;
                hps_0_ddr_mem_dm                         : out   std_logic_vector(3 downto 0);
